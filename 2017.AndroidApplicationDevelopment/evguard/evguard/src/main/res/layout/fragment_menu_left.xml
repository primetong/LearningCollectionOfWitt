<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_left_menu"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:weightSum="23" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_hello_word"
            style="@style/commtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:text="Welcome,"
            android:textColor="#fff"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/commtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="Vivian"
            android:textColor="#ff0" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/img_cross_horizanal" >

        <ImageView
            android:id="@+id/iv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/icon_wether_raining" />

        <TextView
            android:id="@+id/tv_temp"
            style="@style/commtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_weather"
            android:drawableRight="@drawable/icon_templeture"
            android:textColor="@color/menu_common_txt_color"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_city"
            style="@style/commtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/menu_common_txt_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_weather"
            style="@style/commtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf = "@id/tv_city"
            android:textColor="@color/menu_common_txt_color"
            android:textSize="18sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_left_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:divider="@null"
        android:paddingTop="5dp"
        android:scrollbars="none" >
    </ListView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/icon_logo_gray"
        android:layout_gravity="center" />

</LinearLayout>