<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#fff"
    android:orientation="vertical">
  <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent" 
     >
    <LinearLayout
        android:id="@+id/ll_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top">
        <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="right|center"
        android:text="@string/download_car_data"
        android:textColor="@color/white"
        android:textSize="18sp" 
        android:visibility="gone"/> 
   <com.evguard.customview.View_Location_CarPositionInfo 
		    android:id="@+id/view_carpostioninfo"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:visibility="gone"/>
   </LinearLayout>

	<LinearLayout 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_gravity="bottom|right"
       android:layout_marginRight="70dp"
       android:layout_marginBottom="10dp"
       >
        <ImageView
            android:id="@+id/img_maplayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/maplayers" />
    
    </LinearLayout>
 
   <LinearLayout 
       android:id="@+id/ll_zoom"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_gravity="bottom|right"
       android:layout_marginBottom="10dp"
       >
        <ImageView
            android:id="@+id/img_zoomin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/zoomout" />
        <ImageView
            android:id="@+id/img_zoomout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/zoomin" />
        </LinearLayout>
         
   <LinearLayout 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_gravity="bottom|left"
       android:layout_marginBottom="10dp"
       >
        <ImageView
            android:id="@+id/iv_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/icon_locate" />
        </LinearLayout>


</FrameLayout> 
</LinearLayout>